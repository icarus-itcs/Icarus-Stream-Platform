html
  head
    title #{name} - Stream (WSS)
    script(src='https://cdn.bootcss.com/flv.js/1.5.0/flv.min.js')
  body(style='margin:0;')
    video(controls, id='videoElement', style='background-color: #000;position:absolute;top:0;left:0;width:100%;height:100%;', autoPlay='true', muted='muted')
    script.
      if (flvjs.isSupported()) {
          var videoElement = document.getElementById('videoElement');
          var flvPlayer = flvjs.createPlayer({
              type: 'flv',
              url: 'wss://wss.sorry.video/#{name}/#{auth}.flv'
          });
          flvPlayer.attachMediaElement(videoElement);
          flvPlayer.load();
          flvPlayer.play();
      }
